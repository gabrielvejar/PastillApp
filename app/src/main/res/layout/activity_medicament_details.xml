<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicamentDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16pt"
            android:paddingTop="8pt"
            android:paddingRight="16pt"
            android:paddingBottom="32pt">

            <TextView
                android:id="@+id/activity_details_tv_title_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16pt"
                android:text="Detalles de alarma"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="16pt"
                />

            <TextView
                android:id="@+id/activity_details_tv_med_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre" />

            <TextView
                android:id="@+id/activity_details_tv_med_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amoxicilina"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="8pt"/>

            <TextView
                android:id="@+id/activity_details_tv_med_start_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicio del tratamiento" />

            <TextView
                android:id="@+id/activity_details_tv_med_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12/05/2022 a las 18:30"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="8pt"/>

            <TextView
                android:id="@+id/activity_details_tv_med_repeat_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repetir cada" />

            <TextView
                android:id="@+id/activity_details_tv_med_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 Horas"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="8pt"/>

            <TextView
                android:id="@+id/activity_details_tv_med_note_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nota" />

            <TextView
                android:id="@+id/activity_details_tv_med_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Antibiotico para la infección del oído."
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="8pt"/>

            <Button
                android:id="@+id/activity_details_btn_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16pt"
                android:layout_marginBottom="8pt"
                android:text="Editar medicamento" />

            <Button
                android:id="@+id/activity_details_btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8pt"
                android:backgroundTint="#E91E63"
                android:text="Eliminar medicamento" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>